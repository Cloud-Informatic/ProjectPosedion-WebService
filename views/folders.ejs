
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css-file-icons.css">
    <link rel="stylesheet" href="landing.css">
    <link rel="stylesheet" href="folder.css">
    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container" style="margin-top: 2%;">
      <div class="row">
        <div class="col" style=" font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; text-align: center;">
          <h2 style="margin-bottom:16px ;">Your Wallet ID</h2>
          <h3 style="display: inline; padding: 30px;"><%= userID %></h3>
          <img src="random-solid.svg" id="finger" onclick="connectMetamask()" style="margin-left:10px">
        </div>
      </div>
    </div>


    <form id="form" action="/post/walletid" method="post">
      <input type="hidden" id="walletid" name="walletid" value="">
    </form>

    <h2 style="text-align: center;  margin-top: 2%;">Folders</h2>
  
    
      <% for (let i=0; i<variable_1.length; i++){ %>
        <a download="<%= variable_1[i].imageSubTitle%>.<%= variable_1[i].type %>" href="<%=variable_1[i].image%> ">
          <div class="fi fi-doc fi-size-xl docs" >
            <div class="fi-content dFolder"><%=variable_1[i].type%></div>   
          </div>
      </a>
    <%}%>
      

<!-- Modal Başlangıç  -->
<button type="button" style="position: sticky; " class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3">
  Kategori - 3 Görüntüle
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content ">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="folderForm" action="/post/image" method="post" encType="multipart/form-data">
          <input type="text" name="subTitle">
          <input type="file" name="image" id="image">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="formSubmit()" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal Son  -->



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="metamask.js"></script>
    <script src="landing.js"></script>
    <script src="css-file-icons.js"></script>  
    <script>
      function formSubmit() {
        document.getElementById("folderForm").submit();
      }
      var showBtn = document.querySelector('.dFolder');

       showBtn.onclick = function() {
         browser.downloads.showDefaultFolder();
        }
    </script>
  </body>
</html>