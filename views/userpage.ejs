<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css-file-icons.css">
    <link rel="stylesheet" href="landing.css">
    <title>Hello, world!</title>
    <style>
        body{
            background-color: rgb(233, 222, 222);
            background-image: url("tridient.jpg");
            background-repeat: no-repeat;
        }
        img{
             height: 100px;
        }
        #finger{
          height: 40px;
          
        }
        h3{
          font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
      
        }
        p{
          margin-top: 10px;
          font-family: Verdana, Geneva, Tahoma, sans-serif;
        }
        h2{
          background-color: rgb(0, 0, 0);
          color: lavender;
        }
    </style>
  </head>
  <body>
    <div class="container" style="margin-top: 2%;">
      <div class="row">
        <div class="col" style="text-align: center;">
          <h2 style="margin-bottom:16px ;">Your Wallet ID</h2>
          <h3 style="display: inline; padding: 30px;"><%= userID %></h3>
          <img src="random-solid.svg" id="finger" onclick="connectMetamask()" style="margin-left:10px">
        </div>
      </div>
    </div>


    <form id="form" action="/post/walletid" method="post">
      <input type="hidden" id="walletid" name="walletid" value="">
    </form>
    <h2 style="text-align: center;  margin-top: 2%;">Folders</h2>

    <div class="container" style="text-align: center; margin-top: 3%;">
        <div class="row">
          <div class="col">
            <img src="images-solid.svg" onclick="Rimage() " alt="asdsad">
            <p>Images</p>
          </div>
          <div class="col">
            <img src="video-solid.svg" onclick="Rvideo()" alt="asdsad">
            <p>Videos</p>
          </div>
          <div class="col">
            <img src="file-alt-solid.svg" onclick="Rvideo()" alt="asdsad">
            <p>Text</p>
          </div>
          <div class="col">
            <img src="folder-solid.svg" onclick="Rorder()" alt="asdsad">
            <p>Order</p>
          </div>
        </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="metamask.js"></script>
    <script src="landing.js"></script>
    <script src="css-file-icons.js"></script>
    <script>
      function Rimage() {
        window.location.replace("/image");
      }
      function Rtext() {
        window.location.replace("/text");
      }
      function Rvideo() {
        window.location.replace("/video");
      }
      function Rorder() {
        window.location.replace("/order");
      }

    </script>
  </body>
</html>